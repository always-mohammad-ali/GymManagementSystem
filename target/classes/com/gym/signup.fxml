<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gym.controller.SignupController"
            style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #3498db);"
            prefWidth="800" prefHeight="600">
    
    <center>
        <VBox alignment="CENTER" spacing="20">
            <!-- Header -->
            <VBox alignment="CENTER" spacing="5">
                <Label text="ðŸ‘¤" style="-fx-font-size: 48px;"/>
                <Label text="Create New Account" 
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </VBox>
            
            <!-- Signup Form -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);"
                  alignment="CENTER" spacing="15">
                
                <GridPane hgap="10" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                        <ColumnConstraints prefWidth="250"/>
                    </columnConstraints>
                    
                    <!-- Username -->
                    <Label text="Username:*" GridPane.rowIndex="0" GridPane.columnIndex="0"
                           style="-fx-font-weight: bold;"/>
                    <TextField fx:id="usernameField" 
                              promptText="Choose a username"
                              GridPane.rowIndex="0" GridPane.columnIndex="1"
                              style="-fx-pref-height: 35px;"/>
                    
                    <!-- Password -->
                    <Label text="Password:*" GridPane.rowIndex="1" GridPane.columnIndex="0"
                           style="-fx-font-weight: bold;"/>
                    <PasswordField fx:id="passwordField" 
                                  promptText="Minimum 6 characters"
                                  GridPane.rowIndex="1" GridPane.columnIndex="1"
                                  style="-fx-pref-height: 35px;"/>
                    
                    <!-- Confirm Password -->
                    <Label text="Confirm Password:*" GridPane.rowIndex="2" GridPane.columnIndex="0"
                           style="-fx-font-weight: bold;"/>
                    <PasswordField fx:id="confirmPasswordField" 
                                  promptText="Re-enter password"
                                  GridPane.rowIndex="2" GridPane.columnIndex="1"
                                  style="-fx-pref-height: 35px;"/>
                    
                    <!-- Full Name -->
                    <Label text="Full Name:*" GridPane.rowIndex="3" GridPane.columnIndex="0"
                           style="-fx-font-weight: bold;"/>
                    <TextField fx:id="fullNameField" 
                              promptText="Enter your full name"
                              GridPane.rowIndex="3" GridPane.columnIndex="1"
                              style="-fx-pref-height: 35px;"/>
                    
                    <!-- Phone -->
                    <Label text="Phone Number:" GridPane.rowIndex="4" GridPane.columnIndex="0"
                           style="-fx-font-weight: bold;"/>
                    <TextField fx:id="phoneField" 
                              promptText="Enter phone number"
                              GridPane.rowIndex="4" GridPane.columnIndex="1"
                              style="-fx-pref-height: 35px;"/>
                    
                    <!-- Branch Selection -->
                    <Label text="Select Branch:*" GridPane.rowIndex="5" GridPane.columnIndex="0"
                           style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="branchComboBox" 
                             promptText="Choose your branch"
                             GridPane.rowIndex="5" GridPane.columnIndex="1"
                             style="-fx-pref-height: 35px;"/>
                    
                    <!-- Member Type -->
                    <Label text="Account Type:*" GridPane.rowIndex="6" GridPane.columnIndex="0"
                           style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="typeComboBox" 
                             promptText="Select account type"
                             GridPane.rowIndex="6" GridPane.columnIndex="1"
                             style="-fx-pref-height: 35px;"/>
                </GridPane>
                
                <Label fx:id="errorLabel" 
                       style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" 
                       wrapText="true"/>
                
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="signupButton" text="Create Account" 
                           onAction="#handleSignup"
                           style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 40px; -fx-min-width: 150px; -fx-font-size: 16px; -fx-background-radius: 5;"/>
                    
                    <Button fx:id="backButton" text="Back to Login" 
                           onAction="#handleBack"
                           style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 40px; -fx-min-width: 150px; -fx-font-size: 16px; -fx-background-radius: 5;"/>
                </HBox>
                
                <Label text="* Required fields" 
                       style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
            </VBox>
            
            <!-- Footer -->
            <Label text="Already have an account? You'll be redirected to login after signup" 
                   style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;"/>
        </VBox>
    </center>
</BorderPane>