<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" 
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="20" style="-fx-padding: 20;">
    
    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="ðŸ‘¥ Manage Members" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        
        <HBox spacing="10" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
            <TextField fx:id="searchField" promptText="Search members..." 
                      style="-fx-pref-width: 200;"/>
            <Button fx:id="searchButton" text="Search" 
                   style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button fx:id="addMemberButton" text="+ Add Member" 
                   style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
        </HBox>
    </HBox>
    
    <!-- Members Table -->
    <TableView fx:id="membersTable" 
              style="-fx-background-color: white; -fx-background-radius: 5;">
        <columns>
            <TableColumn text="ID" prefWidth="80"/>
            <TableColumn text="Name" prefWidth="150"/>
            <TableColumn text="Phone" prefWidth="120"/>
            <TableColumn text="Schedule" prefWidth="100"/>
            <TableColumn text="Status" prefWidth="80"/>
            <TableColumn text="Join Date" prefWidth="100"/>
            <TableColumn text="Actions" prefWidth="150"/>
        </columns>
    </TableView>
    
    <!-- Member Details Form -->
    <VBox spacing="15" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 5;">
        <Label text="Member Details" 
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <GridPane hgap="15" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                <ColumnConstraints prefWidth="250"/>
                <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                <ColumnConstraints prefWidth="250"/>
            </columnConstraints>
            
            <!-- Row 1 -->
            <Label text="Member ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="memberIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="Full Name:*" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <TextField fx:id="memberNameField" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
            
            <!-- Row 2 -->
            <Label text="Phone Number:*" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="memberPhoneField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Schedule:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <ComboBox fx:id="scheduleComboBox" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
            
            <!-- Row 3 -->
            <Label text="Status:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="statusComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            
            <Label text="Branch:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
            <Label fx:id="branchLabel" GridPane.rowIndex="2" GridPane.columnIndex="3"
                   style="-fx-font-weight: bold;"/>
        </GridPane>
        
        <!-- Action Buttons -->
        <HBox spacing="10">
            <Button fx:id="saveButton" text="Save Member" 
                   style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-min-width: 120;"/>
            <Button fx:id="updateButton" text="Update" 
                   style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-min-width: 120;"/>
            <Button fx:id="deleteButton" text="Delete" 
                   style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-min-width: 120;"/>
            <Button fx:id="clearButton" text="Clear" 
                   style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-min-width: 120;"/>
        </HBox>
        
        <Label fx:id="formMessage" 
               style="-fx-font-size: 12px;" 
               wrapText="true"/>
    </VBox>
    
</VBox>