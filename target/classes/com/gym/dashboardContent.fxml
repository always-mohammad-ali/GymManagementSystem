<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" 
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="20" style="-fx-padding: 20;">
    
    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="ðŸ“Š Dashboard Overview" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>
    
    <!-- Stats Cards -->
    <GridPane hgap="20" vgap="20">
        <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
        </columnConstraints>
        
        <!-- Total Members Card -->
        <VBox style="-fx-background-color: #3498db; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
              GridPane.columnIndex="0">
            <Label text="ðŸ‘¥" style="-fx-font-size: 24px;"/>
            <Label fx:id="totalMembersLabel" text="0" 
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Total Members" 
                   style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.9);"/>
        </VBox>
        
        <!-- Active Members Card -->
        <VBox style="-fx-background-color: #2ecc71; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
              GridPane.columnIndex="1">
            <Label text="âœ…" style="-fx-font-size: 24px;"/>
            <Label fx:id="activeMembersLabel" text="0" 
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Active Members" 
                   style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.9);"/>
        </VBox>
        
        <!-- Total Coaches Card -->
        <VBox style="-fx-background-color: #e74c3c; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
              GridPane.columnIndex="2">
            <Label text="ðŸ’ª" style="-fx-font-size: 24px;"/>
            <Label fx:id="totalCoachesLabel" text="0" 
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Total Coaches" 
                   style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.9);"/>
        </VBox>
        
        <!-- Monthly Revenue Card -->
        <VBox style="-fx-background-color: #f39c12; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
              GridPane.columnIndex="3">
            <Label text="ðŸ’°" style="-fx-font-size: 24px;"/>
            <Label fx:id="revenueLabel" text="$0" 
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Monthly Revenue" 
                   style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.9);"/>
        </VBox>
    </GridPane>
    
    <!-- Charts Section -->
    <VBox spacing="15">
        <Label text="Activity Overview" 
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        
        <HBox spacing="20">
            <!-- Member Activity Chart -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
                  HBox.hgrow="ALWAYS">
                <Label text="Member Signups" 
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <BarChart fx:id="memberChart" 
                         style="-fx-pref-height: 200;"/>
            </VBox>
            
            <!-- Payment Status Chart -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
                  HBox.hgrow="ALWAYS">
                <Label text="Payment Status" 
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <PieChart fx:id="paymentChart" 
                         style="-fx-pref-height: 200;"/>
            </VBox>
        </HBox>
    </VBox>
    
    <!-- Recent Activity -->
    <VBox spacing="10">
        <Label text="Recent Activity" 
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        
        <TableView fx:id="recentActivityTable" 
                  style="-fx-background-color: white; -fx-background-radius: 5;">
            <columns>
                <TableColumn text="Date" prefWidth="100"/>
                <TableColumn text="Activity" prefWidth="200"/>
                <TableColumn text="Member" prefWidth="150"/>
                <TableColumn text="Status" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>
    
</VBox>